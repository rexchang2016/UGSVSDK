<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <!-- 视频预览界面 -->
    <com.tencent.qcloud.ugckit.module.followRecord.FollowRecordPlayView
        android:id="@+id/chorus_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <com.tencent.qcloud.ugckit.module.record.ScrollFilterView
        android:id="@+id/scrollFilterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.tencent.qcloud.ugckit.module.followRecord.FollowRecordRightLayout
        android:id="@+id/record_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleBar_layout"
        android:layout_alignParentRight="true" />

    <com.tencent.qcloud.ugckit.module.followRecord.FollowRecordBottomLayout
        android:id="@+id/record_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <com.tencent.qcloud.ugckit.module.record.beauty.BeautyPannel
        android:id="@+id/beauty_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:visibility="gone" />

    <!-- 标题栏 -->
    <com.tencent.qcloud.ugckit.component.TitleBarLayout
        android:id="@+id/titleBar_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <com.tencent.qcloud.ugckit.module.followRecord.CountDownTimerView
        android:id="@+id/countdown_timer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>